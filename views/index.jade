extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Welcome To My World
					div.account-wall
						img(class='profile-img', src='https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcS02rGrBxRCLsJUwwxODfKD4QXqQQxGXFHoZGrY7NhpU76pT6cZ')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
							br
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							br
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					br		
					a(href='/signup', class='text-center new-account') Create an account
					br
					a(href='/login/facebook', class='btn btn-block btn-social btn-facebook') Login with Facebook
					i(class='fa fa-facebook')
					br
					a(href='/login/linkedin', class='btn btn-block btn-social btn-linkedin') Login with LinkedIn
					i(class='fa fa-linkedin')
					#message
					if message
						h1.text-center.error-message #{message}